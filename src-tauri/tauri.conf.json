{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },

  "package": {
    "productName": "revelation-autoplay-piano",
    "version": "0.0.0"
  },

  "tauri": {
    "allowlist": {
      "all": false,

      "shell": {
        "all": false,
        "open": true
      },

      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setTitle": true,
        "create": true
      },

      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "io.github.cuikho210",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Revelation Autoplay Piano - by cuikho210",
        "width": 1200,
        "height": 600,
        "decorations": false,
        "minWidth": 400,
        "minHeight": 300
      }
    ]
  }
}
