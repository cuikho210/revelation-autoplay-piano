{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },

  "package": {
    "version": "0.1.3",
    "productName": "Revelation Autoplay Piano"
  },

  "tauri": {
    "allowlist": {
      "all": false,

      "shell": {
        "all": false,
        "open": true
      },

      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setTitle": true,
        "create": true,
        "setIgnoreCursorEvents": true,
        "setResizable": true
      },

      "globalShortcut": {
        "all": true
      },

      "fs": {
        "scope": ["$RESOURCE/*", "$CONFIG/*", "$APPCONFIG/*", "$DOCUMENT/**/*"],
        "writeFile": true,
        "exists": true,
        "readFile": true,
        "createDir": true,
        "readDir": true,
        "removeFile": true,
        "removeDir": true
      },

      "dialog": {
        "all": false,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": false
      },

      "process": {
        "all": false,
        "exit": true,
        "relaunch": false,
        "relaunchDangerousAllowSymlinkMacos": false
      },

      "path": {
        "all": true
      },

      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.cuikho210.revelation-autoplay-piano",
      "targets": "all",
      "resources": [
        "./piano_key"
      ],
      "windows": {
        "wix": {
          "bannerPath": "./images/banner.png",
          "dialogImagePath": "./images/dialog.png"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/cuikho210/revelation-autoplay-piano/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ1MzBEMkU4MjVFMUZFClJXVCs0U1hvMGpEVkFBZHBUaGF5UHN0OWNKa2xrTU40RWRVUmtYM3ZiaFlIaHg3V3pJM29ITGd6Cg=="
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Revelation Autoplay Piano - by cuikho210",
        "width": 1200,
        "height": 600,
        "decorations": false,
        "minWidth": 400,
        "minHeight": 300
      }
    ]
  }
}
